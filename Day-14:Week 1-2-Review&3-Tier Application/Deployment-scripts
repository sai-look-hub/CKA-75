#!/bin/bash

################################################################################
# deploy.sh - Automated Deployment Script for 3-Tier Application
# Day 14-15: Week 1-2 Review & Mini Project
#
# Usage: ./deploy.sh [environment]
# Example: ./deploy.sh production
################################################################################

set -e  # Exit on error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Configuration
ENVIRONMENT="${1:-production}"
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MANIFEST_DIR="${SCRIPT_DIR}/../manifests"
NAMESPACE="$ENVIRONMENT"

# Functions
print_header() {
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${BLUE}  $1${NC}"
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
}

print_success() {
    echo -e "${GREEN}âœ“${NC} $1"
}

print_error() {
    echo -e "${RED}âœ—${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}âš ${NC} $1"
}

print_info() {
    echo -e "${CYAN}â„¹${NC} $1"
}

print_step() {
    echo -e "${MAGENTA}â–¶${NC} $1"
}

# Check prerequisites
check_prerequisites() {
    print_header "Checking Prerequisites"
    
    # Check kubectl
    if ! command -v kubectl &> /dev/null; then
        print_error "kubectl not found. Please install kubectl."
        exit 1
    fi
    print_success "kubectl is installed"
    
    # Check cluster connection
    if ! kubectl cluster-info &> /dev/null; then
        print_error "Cannot connect to Kubernetes cluster"
        exit 1
    fi
    print_success "Connected to Kubernetes cluster"
    
    # Check cluster version
    K8S_VERSION=$(kubectl version --short 2>/dev/null | grep Server | awk '{print $3}')
    print_info "Kubernetes version: $K8S_VERSION"
    
    # Check if namespace already exists
    if kubectl get namespace "$NAMESPACE" &>/dev/null; then
        print_warning "Namespace '$NAMESPACE' already exists"
        read -p "Do you want to continue? This will update existing resources. (yes/no): " -r
        if [[ ! $REPLY =~ ^[Yy][Ee][Ss]$ ]]; then
            print_info "Deployment cancelled"
            exit 0
        fi
    fi
    
    echo
}

# Create namespace
create_namespace() {
    print_header "Creating Namespace"
    
    print_step "Creating namespace: $NAMESPACE"
    
    cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: Namespace
metadata:
  name: $NAMESPACE
  labels:
    name: $NAMESPACE
    environment: $ENVIRONMENT
  annotations:
    description: "$ENVIRONMENT environment for 3-tier application"
    managed-by: "deployment-script"
EOF
    
    print_success "Namespace created: $NAMESPACE"
    echo
}

# Deploy database tier
deploy_database() {
    print_header "Deploying Database Tier (PostgreSQL)"
    
    print_step "Creating PostgreSQL ConfigMap"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: ConfigMap
metadata:
  name: postgres-config
  namespace: $NAMESPACE
data:
  POSTGRES_DB: "ecommerce"
  PGDATA: "/var/lib/postgresql/data/pgdata"
EOF
    print_success "PostgreSQL ConfigMap created"
    
    print_step "Creating PostgreSQL Secret"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: $NAMESPACE
type: Opaque
stringData:
  POSTGRES_USER: "ecommerce_user"
  POSTGRES_PASSWORD: "$(openssl rand -base64 32)"
  POSTGRES_REPLICATION_PASSWORD: "$(openssl rand -base64 32)"
EOF
    print_success "PostgreSQL Secret created"
    
    print_step "Creating PostgreSQL Headless Service"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: Service
metadata:
  name: postgres
  namespace: $NAMESPACE
  labels:
    app: postgres
    tier: database
spec:
  clusterIP: None
  selector:
    app: postgres
  ports:
  - name: postgres
    port: 5432
    targetPort: 5432
EOF
    print_success "PostgreSQL Headless Service created"
    
    print_step "Creating PostgreSQL StatefulSet"
    kubectl apply -f - <<EOF
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: postgres
  namespace: $NAMESPACE
spec:
  serviceName: postgres
  replicas: 1
  selector:
    matchLabels:
      app: postgres
  template:
    metadata:
      labels:
        app: postgres
        tier: database
    spec:
      containers:
      - name: postgres
        image: postgres:14-alpine
        ports:
        - containerPort: 5432
          name: postgres
        envFrom:
        - configMapRef:
            name: postgres-config
        - secretRef:
            name: postgres-secret
        volumeMounts:
        - name: postgres-data
          mountPath: /var/lib/postgresql/data
        resources:
          requests:
            cpu: "250m"
            memory: "512Mi"
          limits:
            cpu: "500m"
            memory: "1Gi"
  volumeClaimTemplates:
  - metadata:
      name: postgres-data
    spec:
      accessModes: ["ReadWriteOnce"]
      resources:
        requests:
          storage: 10Gi
EOF
    print_success "PostgreSQL StatefulSet created"
    
    print_step "Waiting for PostgreSQL to be ready..."
    kubectl wait --for=condition=ready pod -l app=postgres \
        -n "$NAMESPACE" --timeout=300s || {
        print_warning "PostgreSQL took longer than expected to start"
    }
    print_success "PostgreSQL is ready"
    
    echo
}

# Deploy cache tier
deploy_cache() {
    print_header "Deploying Cache Tier (Redis)"
    
    print_step "Creating Redis Deployment"
    kubectl apply -f - <<EOF
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis
  namespace: $NAMESPACE
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis
  template:
    metadata:
      labels:
        app: redis
        tier: cache
    spec:
      containers:
      - name: redis
        image: redis:7-alpine
        ports:
        - containerPort: 6379
          name: redis
        resources:
          requests:
            cpu: "50m"
            memory: "64Mi"
          limits:
            cpu: "100m"
            memory: "128Mi"
EOF
    
    print_step "Creating Redis Service"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: Service
metadata:
  name: redis
  namespace: $NAMESPACE
spec:
  type: ClusterIP
  selector:
    app: redis
  ports:
  - port: 6379
    targetPort: 6379
EOF
    
    print_success "Redis deployed"
    echo
}

# Deploy backend tier
deploy_backend() {
    print_header "Deploying Backend Tier (API)"
    
    print_step "Creating Backend ConfigMap"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: ConfigMap
metadata:
  name: backend-config
  namespace: $NAMESPACE
data:
  NODE_ENV: "$ENVIRONMENT"
  PORT: "8080"
  DB_HOST: "postgres.$NAMESPACE.svc.cluster.local"
  DB_PORT: "5432"
  DB_NAME: "ecommerce"
  REDIS_HOST: "redis.$NAMESPACE.svc.cluster.local"
  REDIS_PORT: "6379"
EOF
    
    print_step "Creating Backend Secret"
    DB_PASSWORD=$(kubectl get secret postgres-secret -n "$NAMESPACE" -o jsonpath='{.data.POSTGRES_PASSWORD}' | base64 -d)
    kubectl apply -f - <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: backend-secret
  namespace: $NAMESPACE
type: Opaque
stringData:
  DB_PASSWORD: "$DB_PASSWORD"
  JWT_SECRET: "$(openssl rand -base64 32)"
  API_KEY: "$(openssl rand -base64 32)"
EOF
    
    print_step "Creating Backend Deployment"
    kubectl apply -f - <<EOF
apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend
  namespace: $NAMESPACE
spec:
  replicas: 3
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
        tier: backend
    spec:
      initContainers:
      - name: wait-for-db
        image: busybox:latest
        command:
        - sh
        - -c
        - |
          until nc -z postgres.$NAMESPACE.svc.cluster.local 5432; do
            echo "Waiting for database..."
            sleep 2
          done
          echo "Database is ready!"
      containers:
      - name: api
        image: hashicorp/http-echo:latest
        args:
        - "-text=Backend API v2.1.0 - Pod: \$(POD_NAME)"
        - "-listen=:8080"
        ports:
        - containerPort: 8080
          name: http
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        envFrom:
        - configMapRef:
            name: backend-config
        - secretRef:
            name: backend-secret
        resources:
          requests:
            cpu: "100m"
            memory: "128Mi"
          limits:
            cpu: "200m"
            memory: "256Mi"
EOF
    
    print_step "Creating Backend Service"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: Service
metadata:
  name: backend
  namespace: $NAMESPACE
spec:
  type: ClusterIP
  selector:
    app: backend
  ports:
  - port: 8080
    targetPort: 8080
EOF
    
    print_success "Backend deployed"
    
    print_step "Waiting for Backend to be ready..."
    kubectl wait --for=condition=ready pod -l app=backend \
        -n "$NAMESPACE" --timeout=180s || {
        print_warning "Backend took longer than expected to start"
    }
    print_success "Backend is ready"
    
    echo
}

# Deploy frontend tier
deploy_frontend() {
    print_header "Deploying Frontend Tier"
    
    print_step "Creating Frontend ConfigMap"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: ConfigMap
metadata:
  name: frontend-config
  namespace: $NAMESPACE
data:
  REACT_APP_API_URL: "http://backend:8080"
  REACT_APP_ENVIRONMENT: "$ENVIRONMENT"
EOF
    
    print_step "Creating Frontend Deployment"
    kubectl apply -f - <<EOF
apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
  namespace: $NAMESPACE
spec:
  replicas: 2
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
        tier: frontend
    spec:
      containers:
      - name: nginx
        image: nginx:alpine
        ports:
        - containerPort: 80
          name: http
        envFrom:
        - configMapRef:
            name: frontend-config
        resources:
          requests:
            cpu: "50m"
            memory: "64Mi"
          limits:
            cpu: "100m"
            memory: "128Mi"
EOF
    
    print_step "Creating Frontend Service (LoadBalancer)"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: Service
metadata:
  name: frontend
  namespace: $NAMESPACE
spec:
  type: LoadBalancer
  selector:
    app: frontend
  ports:
  - port: 80
    targetPort: 80
EOF
    
    print_success "Frontend deployed"
    
    print_step "Waiting for Frontend to be ready..."
    kubectl wait --for=condition=ready pod -l app=frontend \
        -n "$NAMESPACE" --timeout=180s || {
        print_warning "Frontend took longer than expected to start"
    }
    print_success "Frontend is ready"
    
    echo
}

# Apply security policies
apply_security() {
    print_header "Applying Security Policies"
    
    print_step "Creating RBAC"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: ServiceAccount
metadata:
  name: ecommerce-app
  namespace: $NAMESPACE
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: ecommerce-app-role
  namespace: $NAMESPACE
rules:
- apiGroups: [""]
  resources: ["configmaps", "secrets"]
  verbs: ["get", "list"]
EOF
    print_success "RBAC configured"
    
    print_step "Creating Resource Quota"
    kubectl apply -f - <<EOF
apiVersion: v1
kind: ResourceQuota
metadata:
  name: ${ENVIRONMENT}-quota
  namespace: $NAMESPACE
spec:
  hard:
    requests.cpu: "10"
    requests.memory: "20Gi"
    limits.cpu: "20"
    limits.memory: "40Gi"
    pods: "50"
EOF
    print_success "Resource Quota created"
    
    echo
}

# Show deployment status
show_status() {
    print_header "Deployment Status"
    
    echo -e "${CYAN}ðŸ“¦ Pods:${NC}"
    kubectl get pods -n "$NAMESPACE" -o wide
    echo
    
    echo -e "${CYAN}ðŸŒ Services:${NC}"
    kubectl get svc -n "$NAMESPACE"
    echo
    
    echo -e "${CYAN}ðŸ“ Endpoints:${NC}"
    kubectl get ep -n "$NAMESPACE"
    echo
    
    echo -e "${CYAN}ðŸ’¾ PVCs:${NC}"
    kubectl get pvc -n "$NAMESPACE"
    echo
}

# Show access information
show_access_info() {
    print_header "Access Information"
    
    # Get frontend service type
    FRONTEND_TYPE=$(kubectl get svc frontend -n "$NAMESPACE" -o jsonpath='{.spec.type}')
    
    if [ "$FRONTEND_TYPE" = "LoadBalancer" ]; then
        print_info "Getting external IP (this may take a few minutes)..."
        
        # Wait for external IP
        for i in {1..60}; do
            EXTERNAL_IP=$(kubectl get svc frontend -n "$NAMESPACE" -o jsonpath='{.status.loadBalancer.ingress[0].ip}')
            if [ -n "$EXTERNAL_IP" ] && [ "$EXTERNAL_IP" != "<none>" ]; then
                break
            fi
            sleep 2
        done
        
        if [ -n "$EXTERNAL_IP" ] && [ "$EXTERNAL_IP" != "<none>" ]; then
            echo
            print_success "Application is accessible at: http://$EXTERNAL_IP"
            echo
        else
            print_warning "External IP is still pending. Run this command to check:"
            echo "  kubectl get svc frontend -n $NAMESPACE -w"
            echo
        fi
    else
        print_info "Frontend service type: $FRONTEND_TYPE"
    fi
    
    print_info "Useful commands:"
    echo
    echo "  # Watch pod status"
    echo "  kubectl get pods -n $NAMESPACE -w"
    echo
    echo "  # View logs"
    echo "  kubectl logs -f -l app=backend -n $NAMESPACE"
    echo
    echo "  # Port forward (for ClusterIP)"
    echo "  kubectl port-forward svc/frontend 8080:80 -n $NAMESPACE"
    echo
    echo "  # Describe service"
    echo "  kubectl describe svc frontend -n $NAMESPACE"
    echo
}

# Main deployment function
main() {
    clear
    
    print_header "3-Tier Application Deployment"
    echo "Environment: $ENVIRONMENT"
    echo "Namespace: $NAMESPACE"
    echo
    
    # Run deployment steps
    check_prerequisites
    create_namespace
    deploy_database
    deploy_cache
    deploy_backend
    deploy_frontend
    apply_security
    show_status
    show_access_info
    
    print_header "Deployment Complete! ðŸŽ‰"
    print_success "All components have been deployed successfully"
    echo
}

# Run main function
main


################################################################################
# cleanup.sh - Cleanup Script
################################################################################

cat > "${SCRIPT_DIR}/cleanup.sh" << 'CLEANUP_EOF'
#!/bin/bash

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

ENVIRONMENT="${1:-production}"
NAMESPACE="$ENVIRONMENT"

print_header() {
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${BLUE}  $1${NC}"
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
}

print_warning() {
    echo -e "${YELLOW}âš ${NC} $1"
}

print_success() {
    echo -e "${GREEN}âœ“${NC} $1"
}

print_header "Cleanup Script"
echo "Environment: $ENVIRONMENT"
echo "Namespace: $NAMESPACE"
echo

print_warning "This will DELETE all resources in namespace '$NAMESPACE'"
read -p "Are you sure? Type 'yes' to confirm: " -r
echo

if [[ ! $REPLY =~ ^[Yy][Ee][Ss]$ ]]; then
    echo "Cleanup cancelled"
    exit 0
fi

echo "Deleting namespace '$NAMESPACE'..."
kubectl delete namespace "$NAMESPACE" --grace-period=30

echo "Waiting for namespace to be deleted..."
while kubectl get namespace "$NAMESPACE" &>/dev/null; do
    echo -n "."
    sleep 2
done
echo

print_success "Namespace '$NAMESPACE' deleted successfully"
print_header "Cleanup Complete! ðŸ§¹"
CLEANUP_EOF

chmod +x "${SCRIPT_DIR}/cleanup.sh"


################################################################################
# test.sh - Testing Script
################################################################################

cat > "${SCRIPT_DIR}/test.sh" << 'TEST_EOF'
#!/bin/bash

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

ENVIRONMENT="${1:-production}"
NAMESPACE="$ENVIRONMENT"

print_test() {
    echo -e "${BLUE}TEST:${NC} $1"
}

print_pass() {
    echo -e "${GREEN}âœ“ PASS:${NC} $1"
}

print_fail() {
    echo -e "${RED}âœ— FAIL:${NC} $1"
}

# Test 1: Check all pods are running
print_test "Checking if all pods are running"
if kubectl get pods -n "$NAMESPACE" | grep -v "Running\|Completed" | grep -q "1/1\|2/2\|3/3"; then
    print_fail "Some pods are not running"
    kubectl get pods -n "$NAMESPACE"
else
    print_pass "All pods are running"
fi
echo

# Test 2: Check all services have endpoints
print_test "Checking if all services have endpoints"
for svc in $(kubectl get svc -n "$NAMESPACE" -o jsonpath='{.items[*].metadata.name}'); do
    ENDPOINTS=$(kubectl get ep "$svc" -n "$NAMESPACE" -o jsonpath='{.subsets[*].addresses[*].ip}')
    if [ -z "$ENDPOINTS" ]; then
        print_fail "Service $svc has no endpoints"
    else
        print_pass "Service $svc has endpoints"
    fi
done
echo

# Test 3: Test backend connectivity
print_test "Testing backend connectivity from within cluster"
kubectl run test-backend --image=curlimages/curl --rm -i -n "$NAMESPACE" --restart=Never -- \
    curl -s http://backend:8080 > /dev/null && \
    print_pass "Backend is accessible" || \
    print_fail "Backend is not accessible"
echo

# Test 4: Test database connectivity
print_test "Testing database connectivity"
kubectl exec -n "$NAMESPACE" postgres-0 -- pg_isready -U postgres > /dev/null 2>&1 && \
    print_pass "Database is ready" || \
    print_fail "Database is not ready"
echo

# Test 5: Test Redis connectivity
print_test "Testing Redis connectivity"
kubectl exec -n "$NAMESPACE" $(kubectl get pod -n "$NAMESPACE" -l app=redis -o jsonpath='{.items[0].metadata.name}') -- \
    redis-cli ping | grep -q PONG && \
    print_pass "Redis is accessible" || \
    print_fail "Redis is not accessible"
echo

print_test "All tests completed!"
TEST_EOF

chmod +x "${SCRIPT_DIR}/test.sh"

echo "All scripts created successfully!"
echo "- deploy.sh: Main deployment script"
echo "- cleanup.sh: Cleanup script"
echo "- test.sh: Testing script"
